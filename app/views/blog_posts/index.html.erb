
<h1>welcome</h1>
<% @blog_posts.each do |blog_post| %>
<div>
 <h2><%= link_to blog_post.title, blog_post_path(blog_post.id) %></h2>
 <% if blog_post.draft? %>
   <div>Draft</div>
  <% elsif blog_post.scheduled? %>
  <div>Scheduled</div>
 <%end%>
 <%= blog_post.body %>
</div>
<% end  %>

